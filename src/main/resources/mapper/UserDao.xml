    <!--通过主键修改数据-->
    <update id="update">
        update order_system.user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
            <if test="url_image != null and url_image != ''">
                url_image = #{url_image},
            </if>
        </set>
        where userId = #{userid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from order_system.user
        where userId = #{userid}
    </delete>

